{
    "SMDVersion":"4.0",
    "id":"policy.smd.json",
    "description":"Policy services descriptor",
    "identity":[
        "notWorkingIdentity=${notWorkingIdentity};otherId=${otherId}",
        "policyId=${policyId};otherId=${otherId}"
    ],
    "target":"/_mocks/schemaStore/data/Policy/",
    "methods":{
        "query":[
            {
                "emptyQueryAllowed":false,
                "techName":"SearchPolicyByClient",
                "displayName":"Search Policy By Client",
                "templates":{
                    "client":"eq(clientId,*)"
                }
            },
            {
                "emptyQueryAllowed":true,
                "techName":"SearchPolicy",
                "displayName":"Search Policy",
                "templates":{
                    "barTemplate":"eq(bar,*)&sort(-bar)",
                    "fooTemplate":"eq(foo,*)&sort(-a)",
                    "sortTemplate":"sort(*)"
                }
            },
            {
                "emptyQueryAllowed":true,
                "techName":"SearchPolicyByState",
                "displayName":"Search State Policy",
                "templates":{
                    "stateTemplate":"[&state(*)?&sort(*)]"
                }
            },
            {
                "emptyQueryAllowed":false,
                "techName":"SearchActiveOnlyPolicy",
                "displayName":"Search Active Policy",
                "templates":{
                    "activeOnlyTemplate":"activeOnly()[&sort(*)]"
                }
            }
        ],
        "get":[
            {
                "techName":"GetPolicy",
                "displayName":"Get Policy",
                "templates":{
                    "barTemplate":"eq(bar,*)",
                    "fooTemplate":"eq(foo,*)"
                }
            }
        ],
        "add":[
            {
                "techName":"AddPolicy",
                "displayName":"Add Policy",
                "schema":{
                    "$methodRef":"../schemas/Policy/Policy.INSERT.req.schema.json"
                }
            }
        ],
        "put":[
            {
                "techName":"PutPolicy",
                "displayName":null,
                "schema":{
                    "$methodRef":"../schemas/Policy/Policy.UPDATE.req.schema.json"
                }
            },
            {
                "techName":"PutPolicyExtended",
                "displayName":null,
                "schema":{
                    "$methodRef":"../schemas/Policy/Policy.extended.UPDATE.req.schema.json"
                }
            }
        ]
    },
    "subordinates":{
        "Version":{
            "id":"policyVersionSmd",
            "description":"Policy version services descriptor",
            "identity":"versionId",
            "methods":{
                "query":[
                    {
                        "techName":"SearchPolicyVersion",
                        "displayName":null,
                        "emptyQueryAllowed":true
                    }
                ],
                "get":[
                    {
                        "techName":"GetPolicyVersion",
                        "displayName":null
                    }
                ]
            }
        },
        "Storno":{
            "id":"policyStornoSmd",
            "description":"Policy storno services descriptor",
            "singleSubordinate":true,
            "methods":{
                "get":[
                    {
                        "techName":"GetPolicyStorno",
                        "displayName":null
                    }
                ],
                "add":[
                    {
                        "techName":"CreatePolicyStorno",
                        "displayName":null
                    }
                ],
                "remove":[
                    {
                        "techName":"RemovePolicyStorno",
                        "displayName":null
                    }
                ]
            },
            "subordinates":{
            	"Status":{
		            "id":"policyStornoStatusSmd",
		            "description":"Policy storno status service descriptor",
		            "methods":{
		                "query":[
		                    {
		                        "techName":"GetPolicyStornoStatus",
		                        "displayName":null
		                    }
		                ]
		            }
		        }
            }
        },
        "Intervention":{
            "id":"policyInterventionSmd",
            "description":"Policy intervention services descriptor",
            "identity":"interventionId",
            "methods":{
                "query":[
                    {
                        "techName":"SearchPolicyIntervention",
                        "displayName":null,
                        "emptyQueryAllowed":false,
                        "templates":{
                            "barTemplate":"eq(bar,*)",
                            "fooTemplate":"eq(foo,*)"
                        }
                    }
                ],
                "get":[
                    {
                        "techName":"GetPolicyIntervention",
                        "displayName":null
                    }
                ]
            }
        }
    }
}
